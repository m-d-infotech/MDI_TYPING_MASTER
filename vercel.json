{
    "version": 2,
    "builds": [
        {
            "src": "server/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "server/api/health.js",
            "use": "@vercel/node"
        },
        {
            "src": "server/api/test_db.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/health",
            "destination": "/server/api/health.js"
        },
        {
            "source": "/api/test_db",
            "destination": "/server/api/test_db.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/assets/$1"
        },
        {
            "source": "/(.*\\..+)",
            "destination": "/client/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}
